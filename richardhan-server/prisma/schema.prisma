generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String       @id @default(uuid())
  userName        String       @unique
  fullName        String
  email           String       @unique
  phone           String?      @unique
  password        String?
  image           String?
  provider        AuthProvider @default(LOCAL)
  role            ProfileType?
  status          UserStatus   @default(ACTIVE)
  isEmailVerified Boolean      @default(false)
  isGoogleLogin   Boolean      @default(false)
  hasProfile      Boolean      @default(false)
  suspendReason   String?
  banReason       String?
  suspendUntil    DateTime?
  isDeleted       Boolean      @default(false)
  isTwoFactorEnabled Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pendingRequestCount Int @default(0)
  friendsCount        Int @default(0)

  kycs                 KYC[]                @relation("KycUser")
  reviewedKycs         KYC[]                @relation("KycReviewedBy")
  reviews              Review[]
  vendorProfile        VendorProfile?
  carts                Cart[]
  orders               Order[]
  shippingAddresses    ShippingAddress[]
  petSitterProfiles    PetSitterProfile[]
  petSitterBookings    PetSitterBooking[]
  petSchoolProfiles    PetSchoolProfile[]
  courseUsers          CourseUser[]
  petOwnerProfiles     PetOwnerProfile[]
  reductions           Reduction[]
  bookings             Booking[]
  paymentsMade         Payment[]            @relation("PaymentPayer")
  paymentsReceived     Payment[]            @relation("PaymentReceiver")
  posts                Post[]
  reels                Reel[]
  stories              Story[]
  moments              Moment[]
  postLikes            PostLike[]
  reelLikes            ReelLike[]
  comments             Comment[]
  bookmarks            Bookmark[]
  messages             Message[]
  notificationReceiver Notification[]       @relation("NotificationReceiver")
  notificationSender   Notification[]       @relation("NotificationSender")
  communityMessages    CommunityMessage[]
  bankInformations     BankInformation[]
  emailVerifications   EmailVerification[]
  passwordResetTokens  PasswordResetToken[]
  hotelProfile         HotelProfile?

  conversationsAsUser1 Conversation[]       @relation("User1Conversations")
  conversationsAsUser2 Conversation[]       @relation("User2Conversations")
  communityTopicUsers  CommunityTopicUser[]
  myCreatedTopics      CommunityTopic[]

  sentFriendRequests     FriendRequest[] @relation("FriendRequestSender")
  receivedFriendRequests FriendRequest[] @relation("FriendRequestReceiver")
  friendshipsA           Friendship[]    @relation("FriendshipUserA")
  friendshipsB           Friendship[]    @relation("FriendshipUserB")
  commentLikes           CommentLike[]
  storyViews             StoryView[]
  storyLikes             StoryLike[]
  storyReplies           StoryReplies[]
  reelComments           ReelComment[]

  reportedBy                Report[]                   @relation("ReportReporter")
  reportsAgainst            Report[]                   @relation("ReportReported")
  blockedUsers              UserBlock[]                @relation("UserBlocksSent")
  blockedByUsers            UserBlock[]                @relation("UserBlocksReceived")
  mutesReceived             UserMute[]                 @relation("UserMutesReceived") // mutes where this user is muted
  mutesGiven                UserMute[]                 @relation("UserMutesGiven") // mutes this user performed
  hiddenContents            HiddenContent[]
  serviceReviews            ServiceReview[]
  userNotificationsSettings UserNotificationsSettings?
  productReviews            ProductReview[]
  cancelledBookings         PetSitterBooking[]         @relation("BookingCancelledByUser")
  petSitterPackageReviews   PetSitterPackageReview[]
  petSitterReviews          PetSitterReview[]
  platformSettingsHistories PlatformSettingsHistory[]

  @@index([status, suspendUntil])
}

model UserNotificationsSettings {
  id          String  @id @default(uuid())
  userId      String  @unique
  enableEmail Boolean @default(true)
  enablePush  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model HotelNotificationSettings {
  id                  String  @id @default(uuid())
  hotelProfileId      String  @unique
  newBookings         Boolean @default(true)
  checkInReminders    Boolean @default(true)
  checkOutReminders   Boolean @default(true)
  paymentUpdates      Boolean @default(true)
  adminMessages       Boolean @default(true)
  bookingCancellations Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  hotelProfile HotelProfile @relation(fields: [hotelProfileId], references: [id], onDelete: Cascade)
}

model PetSitterNotificationSettings {
  id                   String  @id @default(uuid())
  petSitterProfileId   String  @unique
  newBookings          Boolean @default(true)
  checkInReminders     Boolean @default(true)
  checkOutReminders    Boolean @default(true)
  paymentUpdates       Boolean @default(true)
  adminMessages        Boolean @default(true)
  bookingCancellations Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  petSitterProfile PetSitterProfile @relation(fields: [petSitterProfileId], references: [id], onDelete: Cascade)
}

model UserBlock {
  id String @id @default(uuid())

  blockerId     String
  blockedUserId String @map("blockedId")

  createdAt DateTime @default(now())

  blocker User @relation("UserBlocksSent", fields: [blockerId], references: [id])

  blockedUser User @relation("UserBlocksReceived", fields: [blockedUserId], references: [id])

  @@unique([blockerId, blockedUserId])
  @@index([blockerId])
  @@index([blockedUserId])
}

model UserMute {
  id          String   @id @default(uuid())
  mutedUserId String
  mutedById   String
  createdAt   DateTime @default(now())

  mutedUser User @relation("UserMutesReceived", fields: [mutedUserId], references: [id])
  mutedBy   User @relation("UserMutesGiven", fields: [mutedById], references: [id])

  @@unique([mutedUserId, mutedById]) // prevent duplicate mutes
}

model EmailVerification {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model KYC {
  id                       String             @id @default(uuid())
  userId                   String
  fullName                 String
  email                    String
  dateOfBirth              String
  gender                   String?
  nationality              String?
  image                    String?
  identificationType       IdentificationType
  identificationNumber     String?
  identificationFrontImage String
  identificationBackImage  String
  signatureImage           String?
  phoneNumber              String
  presentAddress           String?
  permanentAddress         String?
  emergencyContactName     String?
  emergencyContactRelation     String?
  emergencyContactPhone    String?
  roleType                 OrganizationType
  
  // Business Information
  businessName               String?
  businessRegistrationNumber String?
  businessAddress            String?
  businessRegistrationCertificate String?
  
  // License Information
  licenseNumber       String?
  licenseIssueDate    String?
  licenseExpiryDate   String?
  hotelLicenseImage   String?
  hygieneCertificate  String?
  
  // Facility verification
  facilityPhotos      String[]
  
  status                   KycStatus          @default(PENDING)
  reviewedBy               String?
  reviewedAt               DateTime?
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt

  User       User  @relation("KycUser", fields: [userId], references: [id])
  ReviewedBy User? @relation("KycReviewedBy", fields: [reviewedBy], references: [id])
}

model Address {
  id                 String  @id @default(uuid())
  streetAddress      String
  city               String
  country            String
  postalCode         String
  vendorProfileId    String?
  hotelProfileId     String?
  petSchoolProfileId String?

  vendorProfile    VendorProfile?    @relation(fields: [vendorProfileId], references: [id], onDelete: Cascade)
  hotelProfile     HotelProfile?     @relation(fields: [hotelProfileId], references: [id], onDelete: Cascade)
  petSchoolProfile PetSchoolProfile? @relation(fields: [petSchoolProfileId], references: [id], onDelete: Cascade)
}


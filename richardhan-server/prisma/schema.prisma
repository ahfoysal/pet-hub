model Employee {
  id             String   @id @default(uuid())
  petSchoolId    String
  name           String
  email          String
  phone          String
  image          String
  specialization String[]
  avgRating      Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  courses        Course[]

  petSchoolProfile PetSchoolProfile @relation(fields: [petSchoolId], references: [id])
  reviews          EmployeeReview[]
}

model EmployeeReview {
  id         String   @id @default(uuid())
  employeeId String
  rating     Float
  comment    String
  createdAt  DateTime @default(now())

  employee Employee @relation(fields: [employeeId], references: [id])
}

// As example
model BankInformation {
  id                String            @id @default(uuid())
  userId            String
  profileType       ProfileType
  accountHolderName String
  bankName          String
  branchName        String
  accountNumber     String
  routingNumber     String
  swiftCode         String
  country           String
  isPrimary         Boolean
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  petOwnerProfiles  PetOwnerProfile[]

  User User @relation(fields: [userId], references: [id])
}

model HotelProfile {
  id                String        @id @default(uuid())
  userId            String        @unique // Owner of this profile
  name              String // Hotel name
  email             String
  phone             String
  description       String?
  images            String[]
  dayStartingTime   String
  dayEndingTime     String
  nightStartingTime String
  nightEndingTime   String
  status            ProfileStatus @default(PENDING)
  isVerified        Boolean       @default(false)
  rating            Float         @default(0)
  reviewCount       Int           @default(0)
  analytics         Json?
  businessRegistrationNumber String?
  businessLicense            String?
  insuranceCertificate       String?
  yearsOfExperience         Int?          @default(0)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  notificationSettings HotelNotificationSettings?
  addresses  Address[] // Multiple addresses per hotel
  rooms      Room[]
  foods      Food[]
  facilities Facility[]
  bookings   Booking[]
}

model Room {
  id             String     @id @default(uuid())
  hotelProfileId String
  roomName       String?
  roomNumber     String
  images         String[]
  description    String
  roomAmenities  String[]
  roomType       RoomType
  status         RoomStatus @default(AVAILABLE)
  petCapacity    Int
  humanCapacity  Int?
  price          Int
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  hotelProfile       HotelProfile       @relation(fields: [hotelProfileId], references: [id])
  bookings           Booking[]
  roomAvailabilities RoomAvailability[]
}

model RoomAvailability {
  id     String @id @default(uuid())
  roomId String
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)

  date          DateTime
  isAvailable   Boolean  @default(true)
  priceOverride Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roomId, date])
}

model Food {
  id              String       @id @default(uuid())
  hotelProfileId  String
  foodType        FoodType // eg. vegan, non-vegan etc
  foodFor         ConsumerType
  name            String
  images          String[]
  ingredients     String[]
  description     String
  price           Int
  numberOfServing Int
  gramPerServing  Int
  petCategory     String
  petBreed        String
  calories        Int
  protein         Float
  fat             Float
  minAge          Int?
  maxAge          Int?
  isAvailable     Boolean      @default(true)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  hotelProfile HotelProfile @relation(fields: [hotelProfileId], references: [id])
}

model Facility {
  id             String       @id @default(uuid())
  hotelProfileId String
  name           String
  facilityFor    ConsumerType
  description    String
  price          Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  hotelProfile   HotelProfile @relation(fields: [hotelProfileId], references: [id])
}

model Booking {
  id             String          @id @default(uuid())
  hotelProfileId String
  userId         String
  roomId         String
  price          Int
  platformFee    Int
  grandTotal     Int
  checkInTime    DateTime
  checkOutTime   DateTime
  petIds         String[]
  assignedStuff  String
  status         BookingStatus
  cancelledBy    CancelledByEnum
  discount       String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  user         User         @relation(fields: [userId], references: [id])
  room         Room         @relation(fields: [roomId], references: [id])
  hotelProfile HotelProfile @relation(fields: [hotelProfileId], references: [id])
  payments     Payment[]
}

//* Vendor
model VendorProfile {
  id          String        @id @default(uuid())
  userId      String        @unique
  name        String
  email       String
  phone       String
  description String?
  images      String[]
  status      ProfileStatus @default(PENDING)
  isVerified  Boolean       @default(false)
  isDeleted   Boolean       @default(false)
  rating      Float         @default(0)
  reviewCount Int           @default(0)
  analytics   Json?
  businessRegistrationNumber String?
  businessLicense            String?
  insuranceCertificate       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  products  Product[]
  orders    Order[]
  addresses Address[]
  notificationSettings VendorNotificationSettings?
}

model VendorNotificationSettings {
  id                      String        @id @default(uuid())
  vendorProfileId         String        @unique
  orderConfirmationEmail  Boolean       @default(true)
  orderCancellationEmail  Boolean       @default(true)
  marketingEmail          Boolean       @default(false)
  pushNotifications       Boolean       @default(true)
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  vendorProfile VendorProfile @relation(fields: [vendorProfileId], references: [id], onDelete: Cascade)
}

model Product {
  id              String   @id @default(uuid())
  vendorId        String
  name            String
  images          String[]
  description     String
  productCategory String
  petCategory     String
  tags            String[]
  features        String[]
  inStock         Boolean  @default(true)
  isPublish       Boolean  @default(true)
  // isBestSelling   Boolean  @default(false)
  avgRating       Float    @default(0)
  seoTitle        String?
  seoDescription  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  vendor         VendorProfile   @relation(fields: [vendorId], references: [id])
  reviews        Review[]
  variants       Variant[]
  orderItems     OrderItem[]
  cartItems      CartItem[]
  productReviews ProductReview[]
}

model ProductReview {
  id        String   @id @default(uuid())
  productId String
  userId    String
  rating    Int
  review    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId])
  @@index([productId])
  @@index([userId])
}

model Variant {
  id            String   @id @default(uuid())
  productId     String
  originalPrice Float
  sellingPrice  Float
  images        String[]
  attributes    Json
  stock         Int
  sku           String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  product        Product            @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems     OrderItem[]
  cartItems      CartItem[]
  attributeIndex VariantAttribute[]
}

enum AttributeType {
  STRING
  NUMBER
  BOOLEAN
  ENUM
}

model Attribute {
  id        String        @id @default(uuid())
  name      String
  slug      String        @unique
  type      AttributeType
  createdAt DateTime      @default(now())

  values AttributeValue[]
}

model AttributeValue {
  id          String @id @default(uuid())
  attributeId String
  value       String

  attribute Attribute @relation(fields: [attributeId], references: [id], onDelete: Cascade)

  @@unique([attributeId, value])
}

model VariantAttribute {
  id        String @id @default(uuid())
  variantId String
  key       String
  value     String

  variant Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@index([key, value])
  @@index([variantId])
}

model Cart {
  id        String   @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]
  orders Order[]
}

model CartItem {
  id         String   @id @default(uuid())
  cartId     String
  productId  String
  variantId  String
  quantity   Int
  unitPrice  Int
  totalPrice Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  variant Variant @relation(fields: [variantId], references: [id])
}

model Order {
  id                String        @id @default(uuid())
  userId            String
  vendorId          String
  cartId            String
  subTotal          Float
  platformFee       Float
  discount          Float?
  grandTotal        Float
  paymentId         String?
  status            OrderStatus
  paymentStatus     PaymentStatus
  shippingAddressId String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user            User            @relation(fields: [userId], references: [id])
  vendor          VendorProfile   @relation(fields: [vendorId], references: [id])
  cart            Cart            @relation(fields: [cartId], references: [id])
  shippingAddress ShippingAddress @relation(fields: [shippingAddressId], references: [id])
  orderItems      OrderItem[]
  reductions      Reduction[]
  payments        Payment[]
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  productId  String
  variantId  String
  quantity   Int
  price      Int
  totalPrice Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  variant Variant @relation(fields: [variantId], references: [id])
}

model ShippingAddress {
  id         String    @id @default(uuid())
  userId     String
  fullName   String
  phone      String
  city       String
  street     String
  postalCode String
  country    String
  isDefault  Boolean   @default(false)
  deletedAt  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  orders Order[]

  @@index([userId])
}

//* ------ Pet Sitter -------
model PetSitterProfile {
  id                String          @id @default(uuid())
  userId            String          @unique
  bio               String
  profileStatus     ProfileStatus   @default(PENDING)
  status            PetSitterStatus @default(OFF_SERVICE)
  analytics         String
  yearsOfExperience Int             @default(0)
  designations      String
  languages         String[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  isVerified        Boolean         @default(false)
  
  businessRegistrationNumber String?
  businessLicense            String?
  insuranceCertificate       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  services Service[]

  addOns             AddOn[]
  petSitterBookings  PetSitterBooking[]
  petSitterAddresses PetSitterAddress[]
  savedPetSitters    SavedPetSitter[]
  packages           Package[]
  petSitterReviews   PetSitterReview[]
  notificationSettings PetSitterNotificationSettings?

  @@index([userId])
}

model SavedPetSitter {
  id String @id @default(uuid())

  petSitterId String
  petOwnerId  String

  petSitter PetSitterProfile @relation(fields: [petSitterId], references: [id], onDelete: Cascade)
  petOwner  PetOwnerProfile  @relation(fields: [petOwnerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([petSitterId, petOwnerId])
  @@index([petOwnerId])
  @@index([petSitterId])
}

model Service {
  id                String   @id @default(uuid())
  name              String
  description       String
  whatsIncluded     String[]
  thumbnailImage    String
  durationInMinutes Int
  isDeleted         Boolean  @default(false)
  isAvailable       Boolean  @default(true)
  serviceId         String   @unique

  price          Decimal
  isDiscountable Boolean  @default(false)
  discount       Int?
  tags           String[]

  petSitterId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  petSitterProfile PetSitterProfile @relation(fields: [petSitterId], references: [id], onDelete: Cascade)

  serviceReviews                     ServiceReview[]
  packageServices                    PackageService[]
  petSitterBookings                  PetSitterBooking[]
  petSitterBookingAdditionalServices PetSitterBookingAdditionalService[]

  @@index([petSitterId])
  @@index([name])
}

model ServiceReview {
  id        String   @id @default(uuid())
  serviceId String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([serviceId])
  @@index([userId])
}

model Package {
  id                String  @id @default(uuid())
  name              String
  description       String
  image             String
  isDeleted         Boolean @default(false)
  durationInMinutes Int
  packageId         String  @unique

  petSitterId String
  petSitter   PetSitterProfile @relation(fields: [petSitterId], references: [id], onDelete: Cascade)
  isAvailable Boolean          @default(true)

  // PRICES
  calculatedPrice Decimal @default(0) // sum of service + addon prices
  offeredPrice    Decimal // petSitter-defined, usually <= calculatedPrice

  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  packageServices         PackageService[]
  petSitterBookings       PetSitterBooking[]
  petSitterPackageReviews PetSitterPackageReview[]
}

model PackageService {
  packageId String
  serviceId String

  package Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([packageId, serviceId])
}

model AddOnPackage {
  AddOnId   String
  PackageId String

  addOn AddOn @relation(fields: [AddOnId], references: [id], onDelete: Cascade)
  // package Package @relation(fields: [PackageId], references: [id], onDelete: Cascade)

  @@unique([AddOnId, PackageId])
}

model AddOn {
  id                 String @id @default(uuid())
  petSitterProfileId String
  name               String
  description        String
  price              Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  petSitterProfile PetSitterProfile @relation(fields: [petSitterProfileId], references: [id])
  addOnPackages    AddOnPackage[]
}

model PetSitterPackageReview {
  id        String   @id @default(uuid())
  packageId String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  package Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([packageId])
  @@index([userId])
}

model PetSitterReview {
  id        String   @id @default(uuid())
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  petSitterId String

  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  petSitter PetSitterProfile @relation(fields: [petSitterId], references: [id], onDelete: Cascade)

  @@index([petSitterId])
  @@index([userId])
}

model PetSitterBooking {
  id          String @id @default(uuid())
  bookingId   String @unique
  price       Int
  platformFee Int
  grandTotal  Int

  packageId String?
  serviceId String?

  additionalServicesIds String[]
  specialInstructions   String?

  durationInMinutes Int?

  bookingType   BookingType
  startingTime  DateTime
